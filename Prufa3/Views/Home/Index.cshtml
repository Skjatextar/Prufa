@model IEnumerable<StudentApplication.Models.Student>

@{
    ViewBag.Title = "Home Page";
}
<form id="searchbox" action="">
    <input id="search" type="text" placeholder="Leita">
    <select name="Categories" id="Categories">
        <option value="valmynd">--Velja flokk--</option>
        <option value="barnaefni">Barnaefni</option>
        <option value="drama">Drama</option>
        <option value="gaman">Gaman</option>
        <option value="hrollvekja">Hrollvekja</option>
        <option value="spenna">Spenna</option>
    </select>
    <input id="submit" type="submit" value="Search">
</form>


<div id="center">

    <table class="table-responsive table table-bordered table-hover table-left">
        <caption><h3>Vinsælast</h3></caption>
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.ActionLink(item.Name, "Edit", new { id = item.ID }) </td>
                    <td> @item.year </td>
                </tr>
            }

        </tbody>
    </table>
    <table class="table-responsive table table-bordered table-hover table-right">
        <caption><h3>Nýjast</h3></caption>
        <thead>
            <tr>
                <th>Name</th>
                <th>Year</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.ActionLink(item.Name, "Edit", new { id = item.ID }) </td>
                    <td> @item.year </td>
                </tr>
            }


        </tbody>
    </table>
</div>