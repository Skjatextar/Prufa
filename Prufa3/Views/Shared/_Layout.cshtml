<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="header">
        <div id="head-left">
            <img width="40px" height="40px" src='@Url.Content("~/Content/logo-subs.jpg")' />
        </div>
        hérna kemur header með logo á vinstri og mynd í miðunni og
        taka á hægri með innskrá og nýskrá
        <!--<div id="login-facebook" >
            <a href="#"
               class="zocial facebook">
                Sign in with Facebook
            </a>
        </div>-->
        <div class="btn ">

            @Html.Partial("_LoginPartial")

        </div>
    </div>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Subs", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Heim", "Index", "Home")</li>
                    <li>@Html.ActionLink("Beiðni", "Index", "Home")</li>
                    <li>@Html.ActionLink("Gagnaleit", "Index", "Home")</li>
                    <li>@Html.ActionLink("UM okkur", "Index", "Home")</li>
                    <li>@Html.ActionLink("Leiðbeiningar", "Index", "Home")</li>
                    <li>@Html.ActionLink("Upphala", "About", "Home")</li>
                    <li>@Html.ActionLink("Persónustillingar", "Contact", "Home")</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
